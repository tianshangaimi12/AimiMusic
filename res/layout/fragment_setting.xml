<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout 
        android:background="#FF4500"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="15dp">
        <ImageView 
            android:id="@+id/img_weather_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/txt_weather_climate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img_weather_ico"
            android:textSize="40sp"
            android:textColor="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"/>
        <TextView 
            android:id="@+id/txt_weather_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_below="@id/img_weather_ico"
            android:layout_marginTop="10dp"/>
        <TextView 
            android:id="@+id/txt_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_below="@id/txt_weather_city"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>

</LinearLayout>
